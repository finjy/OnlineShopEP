@using OnlineShopWebApp
@using OnlineShopWebApp.Models
@model Basket

@{
    ViewData["Title"] = "Order";
}

<div class="container">
    <h2>Order</h2>
    <div class="row">
        <div class="col-3">
            <h5>Your order:</h5>
            @foreach (var item in Model.Items)
            {
                <p>@item.Product.Name (@item.Quantity) - $@item.Cost</p>
            }
            <h6>Total: $@Model.TotalCost</h6>
        </div>
        <form method="post">
            <div class="col-8">
                <h5>Input your delivery details:</h5>
                <p>Address:</p>
                <label>ZipCode</label>
                <div>
                    <input type="text" name="delivery.Address.ZipCode" />
                </div>
                <label>Country:</label>
                <div>
                    <input type="text" name="delivery.Address.Country" />
                </div>
                <label>City:</label>
                <div>
                    <input type="text" name="delivery.Address.City" />
                </div>
                <label>Street:</label>
                <div>
                    <input type="text" name="delivery.Address.Street" />
                </div>
                <label>House:</label>
                <div>
                    <input type="text" name="delivery.Address.House" />
                </div><label>Apartment:</label>
                <div>
                    <input type="text" name="delivery.Address.Apartment" />
                </div>
                <label>Phone:</label>
                <div>
                    <input type="text" name="delivery.Phone" />
                </div>
                <label>Email:</label>
                <div>
                    <input type="text" name="delivery.Email" />
                </div>
                <div>
                    <button class="btn btn-dark btn-sm text-nowrap mt-3" type="submit" asp-controller="Order" asp-action="Buy">Buy</button>
                </div>
            </div>
        </form>

    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/" role="button">Continue shopping</a>
        </div>
    </div>
</div>


