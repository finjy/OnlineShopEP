@using OnlineShopWebApp.Models

@model OrderFormViewModel

@{
    ViewData["Title"] = "Order";
}

<div class="container">
    <h2>Order</h2>
    <div class="row">
        <div class="col-3">
            <h5>Your order:</h5>
            @foreach (var item in @Model.Basket.Items)
            {
                <p>@item.Product.Name (@item.Quantity) - $@item.Cost</p>
            }
            <h6>Total: $@Model.Basket.TotalCost</h6>
        </div>
        <form asp-action="Buy" asp-controller="Order">
            <div class="validation" asp-validation-summary="All"></div>
            <h5>Input your delivery details:</h5>
            <p>Address:</p>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.ZipCode" placeholder="Zip Code" />
                <span asp-validation-for="DeliveryInfo.Address.ZipCode"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.Country" placeholder="Country" />
                <span asp-validation-for="DeliveryInfo.Address.Country"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.City" placeholder="City" />
                <span asp-validation-for="DeliveryInfo.Address.City"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.Street" placeholder="Street" />
                <span asp-validation-for="DeliveryInfo.Address.Street"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.House" placeholder="House" />
                <span asp-validation-for="DeliveryInfo.Address.House"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="DeliveryInfo.Address.Apartment" placeholder="Apartment" />
                <span asp-validation-for="DeliveryInfo.Address.Apartment"></span>
            </div>
            <p>Contacts:</p>
            <div class="mb-3">
                <input class="form-control form-control-sm" type="tel" asp-for="DeliveryInfo.Phone" placeholder="Phone" />
                <span asp-validation-for="DeliveryInfo.Phone"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" type="email" asp-for="DeliveryInfo.Email" placeholder="Email" />
                <span asp-validation-for="DeliveryInfo.Email"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-dark btn-sm text-nowrap mt-3" type="submit" asp-controller="Order" asp-action="Buy">Buy</button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/" role="button">Continue shopping</a>
        </div>
    </div>
</div>
