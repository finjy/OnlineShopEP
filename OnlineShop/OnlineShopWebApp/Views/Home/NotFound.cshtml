@{
    ViewData["Title"] = ViewLocalizer["page.title"];
}
<div class="container">
    <div class="row">
        <div class="col mb-4">
            <h2>@ViewLocalizer["page.header.text"]</h2>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            @ViewLocalizer["page.notfound.text"]
            <div class="row mt-4 justify-content-center">
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-sm text-nowrap active" href="/" role="button">@ViewLocalizer["button.back.text"]</a>
                </div>
            </div>
        </div>
    </div>
</div>