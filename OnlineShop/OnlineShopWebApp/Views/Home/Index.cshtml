@using OnlineShopWebApp.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3 pl-2 pr-2">
            <div class="card shadow">
                <img class="card-img-top" src="@product.Image" alt="@product.Name">
                <div class="card body p-3">
                    <a style="color: darkblue" href="/product/index/@product.Id"><h5>@product.Name</h5></a>
                    <h6>$@product.Cost</h6>
                    <div class="row mt-3 justify-content-between">
                        <div class="col-auto text-left">
                            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/compare/add/@product.Id" role="button">Compare</a>
                        </div>
                        <div class="col-auto text-center">
                            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/favorites/add/@product.Id" role="button">To Favorites</a>
                        </div>
                        <div class="col-auto text-right">
                            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/basket/add/@product.Id" role="button">To Basket</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
