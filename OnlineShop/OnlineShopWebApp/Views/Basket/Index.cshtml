@model BasketViewModel

@{
    ViewData["Title"] = ViewLocalizer["page.title"];
}

<div class="container">
    <h2>@ViewLocalizer["page.header"]</h2>
    <div class="row">
        <div class="col">
            <table class="table border-left border-right border-top border-bottom mt-2">
                <caption>@ViewLocalizer["table.shoppinglist"]</caption>
                <thead class="table-light" align="center">
                    <tr>
                        <th scope="col">@ViewLocalizer["table.name"]</th>
                        <th scope="col">@ViewLocalizer["table.quantity"]</th>
                        <th scope="col">@ViewLocalizer["table.cost"]</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Items)
                {
                    <tbody class="border-top-0" align="center">
                        <tr>
                            <td>
                                <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@item.Product.Id">@item.Product.Name</a>
                            </td>
                            <td>
                                @item.Quantity
                                <div class="btn-group ml-2" role="group" aria-label="Add/Remove buttons">
                                    <a class="btn btn-outline-dark btn-sm" role="button"
                                   asp-area="" asp-controller="Basket" asp-action="Remove" asp-route-id="@item.Product.Id">&ndash;</a>
                                    <a class="btn btn-outline-dark btn-sm" role="button"
                                   asp-area="" asp-controller="Basket" asp-action="Add" asp-route-id="@item.Product.Id">+</a>
                                </div>
                            </td>
                            <td>$@item.Cost</td>
                        </tr>
                    </tbody>
                }
                <tfoot align="center">
                    <tr>
                        <td></td>
                        <td>
                            <a class="btn btn-outline-dark btn-sm text-nowrap" role="button"
                               asp-area="" asp-controller="Basket" asp-action="Clear">@ViewLocalizer["button.clear"]</a>
                        </td>
                        <td colspan="3" class="align-content-end"><b>@ViewLocalizer["table.total.text"]: $@Model.TotalCost</b></td>
                    </tr>
                </tfoot>
            </table>
            <div class="row justify-content-end">
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-sm text-nowrap" href="/" role="button">@ViewLocalizer["button.continue"]</a>
                </div>
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-sm text-nowrap" role="button"
                       asp-area="" asp-controller="Order" asp-action="Index">@ViewLocalizer["button.order"]</a>
                </div>
            </div>
        </div>
    </div>
</div>


