@using OnlineShopWebApp.Models
@model Basket

@{
    ViewData["Title"] = "Basket Page";
}
<h2>Basket</h2>
<div class="container">
    <div class="row">
        <div class="col justify-content-center">
            <table class="table border-left border-right border-top border-bottom">
                <caption>Shopping list</caption>
                <thead align="center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Cost</th>
                    </tr>
                </thead>
                @foreach (var product in Model.ProductCollection)
                {
                    <tbody align="center">
                        <tr>
                            <td>@product.Product.Name</td>
                            <td>@product.Quantity</td>
                            <td>$@product.Product.Cost</td>
                        </tr>
                    </tbody>
                }
                <tfoot align="center">
                    <tr>
                        <td></td>
                        <td></td>
                        <td colspan="3" class="align-content-end"><b>Total: $@Model.GetTotalSum()</b></td>
                    </tr>
                </tfoot>
            </table>
            <div class="row justify-content-end">
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-sm text-nowrap" href="/" role="button">Continue shopping</a>
                </div>
                <div class="col-2">
                    <a class="btn btn-outline-dark btn-sm text-nowrap" href="#" role="button">Place your order</a>
                </div>
            </div>
        </div>
    </div>
</div>


