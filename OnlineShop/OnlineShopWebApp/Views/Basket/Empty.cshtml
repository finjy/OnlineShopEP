@using OnlineShopWebApp.Models

@{
    ViewData["Title"] = "Basket";  
}
<div class="container">
    <h2>Basket</h2>
    <div class="row">
        <div class="col justify-content-center">
            <table class="table border-left border-right border-top border-bottom mt-2">
                <caption>Shopping list</caption>
                <thead class="table-light text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Cost</th>
                    </tr>
                </thead>
                <tbody class="border-top-0 text-center">
                    <tr>
                        <td colspan="3">There are no items in the basket yet.</td>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-12 text-right">
                    <a class="btn btn-outline-dark btn-sm text-nowrap active" href="/" role="button">Continue shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>