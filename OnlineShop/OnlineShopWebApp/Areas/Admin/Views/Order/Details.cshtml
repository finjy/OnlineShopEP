@using OnlineShopWebApp.Models
@model OrderViewModel

@{
    ViewData["Title"] = "Order";
}

<div class="container">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div>
        <div class="col-7">
            <h2>Order details</h2>
            <form asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus">
                <table class="table mt-4">
                    <tbody>
                        <tr>
                            <td>Date and time</td>
                            <td>@Model.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td>Customer</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>
                                @Model.DeliveryInfo.Address.ZipCode,
                                @Model.DeliveryInfo.Address.Country,
                                @Model.DeliveryInfo.Address.City,
                                @Model.DeliveryInfo.Address.Street,
                                @Model.DeliveryInfo.Address.House,
                                @Model.DeliveryInfo.Address.Apartment
                            </td>
                        </tr>
                        <tr>
                            <td>Phone number</td>
                            <td>@Model.DeliveryInfo.Phone</td>
                        </tr>
                        <tr>
                            <td>Cost</td>
                            <td>$@Model.TotalCost</td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>
                                <select class="form-control form-control-sm" asp-for="@Model.Status" asp-items="@Html.GetEnumSelectList<OrderStatusViewModel>()"></select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-sm btn-outline-dark" type="submit" asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-id="@Model.Id">Update status</button>
            </form>
        </div>
    </div>
</div>