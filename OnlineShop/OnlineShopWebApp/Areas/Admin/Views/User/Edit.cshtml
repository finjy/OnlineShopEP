@using OnlineShopWebApp.Areas.Admin.Models

@model User

@{
    ViewData["Title"] = "Edit user data";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div>
        <div class="col-5">
            <h2>Edit user data</h2>
            <form asp-area="Admin" asp-controller="User" asp-action="Edit">
                <div class="validation" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <input name="Id" hidden value="@Model.Id" />
                </div>               
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="FirstName">First name</label>
                    <input class="form-control form-control-sm" asp-for="FirstName" value="@Model.FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="LastName">Last Name</label>
                    <input class="form-control form-control-sm" asp-for="LastName" value="@Model.LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Phone">Phone</label>
                    <input class="form-control form-control-sm" asp-for="Phone" value="@Model.Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="Email" value="@Model.Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-dark btn-sm" type="submit" asp-area="Admin" asp-controller="User" asp-action="Edit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>