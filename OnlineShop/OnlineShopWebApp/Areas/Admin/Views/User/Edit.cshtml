@using OnlineShopWebApp.Models

@model User

@{
    ViewData["Title"] = "Edit user data";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div>
        <div class="col-5">
            <h2>Edit user data</h2>
            <form asp-area="Admin" asp-controller="User" asp-action="Save">
                <div class="validation" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label class="form-control" asp-for="FirstName">First name</label>
                    <input class="form-control form-control-sm" asp-for="FirstName" value="@Model.FirstName">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="LastName">Last Name</label>
                    <input class="form-control form-control-sm" asp-for="LastName" value="@Model.LastName">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Phone">Phone</label>
                    <input class="form-control form-control-sm" asp-for="Phone" value="@Model.Phone">
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="Email" value="@Model.Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark btn-sm" asp-area="Admin" asp-controller="User" asp-action="Save">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>