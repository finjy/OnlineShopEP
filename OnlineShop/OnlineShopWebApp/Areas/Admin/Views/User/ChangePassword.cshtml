@using OnlineShopWebApp.Models;
@using OnlineShopWebApp.Areas.Admin.Models;
@using OnlineShopWebApp.Models.Attributes;

@model ChangePassword

@{
    ViewData["Title"] = "Change Password";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div>
        <div class="col-5">
            <h2>Change password</h2>
            <div class="validation" asp-validation-summary="All"></div>
            <form asp-controller="User" asp-action="ChangePassword" asp-area="Admin">
                <div class="validation" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <input asp-for="Id" hidden value="@Model.Id" />
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Password">New password</label>
                    <input class="form-control form-control-sm" type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="ConfirmPassword">Confirm password</label>
                    <input class="form-control form-control-sm" type="password" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-dark btn-sm" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Change password</button>
                </div>
            </form>
        </div>
    </div>
</div>